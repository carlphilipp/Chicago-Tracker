<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/route_color_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_5"
        android:text="@string/double_empty_string"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/route_color_value"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/arrivals"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/route_color_value"
        android:visibility="visible" />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="@string/map_train_follow_error"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:textStyle="normal"
        android:visibility="gone" />

</RelativeLayout>