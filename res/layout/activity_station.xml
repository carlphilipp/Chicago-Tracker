<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<include
			layout="@layout/app_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

	<android.support.v4.widget.SwipeRefreshLayout
			android:id="@+id/activity_station_swipe_refresh_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="3dp">

		<!-- Scroll view wrapping the layout to allow to scroll -->
		<ScrollView
				android:id="@+id/scrollViewTrainStation"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/bg_selector">

			<!-- Main container. Vertical layout -->
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="@dimen/activity_train_line_padding_bottom"
					android:paddingLeft="@dimen/activity_train_line_padding_left"
					android:paddingRight="@dimen/activity_train_line_padding_right"
					android:paddingTop="@dimen/activity_train_line_padding_top"
					android:orientation="vertical">

				<RelativeLayout
						android:id="@+id/activity_bike_station_streetview_container"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="@dimen/activity_train_line_padding_top">

					<ImageView
							android:id="@+id/activity_bike_station_streetview_image"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:contentDescription="@string/station_activity_google_map_link_desc"
							android:scaleType="centerCrop">
					</ImageView>

					<TextView
							android:id="@+id/activity_bike_station_steetview_text"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentBottom="true"
							android:layout_marginLeft="4dp"
							android:textColor="@color/white"/>
				</RelativeLayout>

				<RelativeLayout
						android:id="@+id/header"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<RelativeLayout
							android:id="@+id/header_icon"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerVertical="true"
							android:layout_marginBottom="10dp">

						<ImageView
								android:id="@+id/activity_bike_station_favorite_star"
								android:layout_width="35dp"
								android:layout_height="35dp"
								android:background="@drawable/any_selector"
								android:contentDescription="@string/station_activity_google_map_link_desc"
								android:src="@drawable/ic_favorite_white_24dp">
						</ImageView>

						<ImageView
								android:id="@+id/activity_bike_station_map_image"
								android:layout_width="35dp"
								android:layout_height="35dp"
								android:layout_toRightOf="@+id/activity_bike_station_favorite_star"
								android:background="@drawable/any_selector"
								android:clickable="true"
								android:contentDescription="@string/station_activity_google_map_link_desc">
						</ImageView>

						<ImageView
								android:id="@+id/activity_bike_station_map_direction"
								android:layout_width="35dp"
								android:layout_height="35dp"
								android:layout_toRightOf="@+id/activity_bike_station_map_image"
								android:background="@drawable/any_selector"
								android:contentDescription="@string/station_activity_google_map_link_desc">
						</ImageView>
					</RelativeLayout>
				</RelativeLayout>

				<LinearLayout
						android:id="@+id/activity_bike_station_details"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@+id/activity_bike_station_streetview_container"
						android:orientation="vertical">
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>