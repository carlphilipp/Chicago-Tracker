<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#02b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_5"
                android:height="@dimen/icon_shadow_5" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#05b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_4"
                android:height="@dimen/icon_shadow_4" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
            <solid android:color="#10b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_3"
                android:height="@dimen/icon_shadow_3" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent" />
            <solid android:color="#15b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_2"
                android:height="@dimen/icon_shadow_2" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="@android:color/transparent" />
            <solid android:color="#20b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_2"
                android:height="@dimen/icon_shadow_2" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@android:color/transparent" />
            <solid android:color="#25b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_2"
                android:height="@dimen/icon_shadow_2" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@android:color/transparent" />
            <solid android:color="#30b7b7b7" />
            <size
                android:width="@dimen/icon_shadow_2"
                android:height="@dimen/icon_shadow_2" />
        </shape>
    </item>
    <!-- Outline -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@android:color/transparent" />
            <solid android:color="@android:color/white" />
            <size
                android:width="@dimen/icon_shadow_2"
                android:height="@dimen/icon_shadow_2" />
        </shape>
    </item>
    <!-- Main -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="7dp"
                android:color="@android:color/transparent" />
            <gradient
                android:angle="90"
                android:endColor="@color/colorAccent"
                android:startColor="@color/colorAccent" />
            <size
                android:width="@dimen/icon_main"
                android:height="@dimen/icon_main" />
        </shape>
    </item>
</layer-list>

