<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_station_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        tools:targetApi="lollipop">

        <!-- Scroll view wrapping the main.java.fr.cph.chicago.res.layout to allow to scroll -->
        <ScrollView
            android:id="@+id/scrollViewTrainStation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_selector"
            android:paddingBottom="@dimen/activity_train_line_padding_bottom"
            android:paddingEnd="@dimen/activity_train_line_padding_right"
            android:paddingLeft="@dimen/activity_train_line_padding_left"
            android:paddingRight="@dimen/activity_train_line_padding_right"
            android:paddingStart="@dimen/activity_train_line_padding_left"
            android:paddingTop="@dimen/activity_train_line_padding_top">

            <!-- Main container. Vertical main.java.fr.cph.chicago.res.layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_train_line_padding_bottom"
                android:paddingEnd="@dimen/activity_train_line_padding_right"
                android:paddingLeft="@dimen/activity_train_line_padding_left"
                android:paddingRight="@dimen/activity_train_line_padding_right"
                android:paddingStart="@dimen/activity_train_line_padding_left"
                android:paddingTop="@dimen/activity_train_line_padding_top">

                <RelativeLayout
                    android:id="@+id/activity_train_station_streetview_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_train_line_padding_top">

                    <ImageView
                        android:id="@+id/activity_train_station_streetview_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_station_street_map_height"
                        android:contentDescription="@string/station_activity_google_map_link_desc"
                        android:scaleType="centerCrop">
                    </ImageView>

                    <TextView
                        android:id="@+id/activity_train_station_steetview_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <include
                    layout="@layout/activity_header_fav_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/activity_train_station_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
