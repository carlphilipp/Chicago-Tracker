<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@+dimen/activity_train_line_padding_bottom"
    android:paddingTop="@+dimen/activity_train_line_padding_top" >

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/station_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="@+dimen/activity_station_stops_line1_padding_color"
            android:text="T"
            android:textColor="@+color/grey_M"
            android:textIsSelectable="false"
            android:textSize="@+dimen/activity_train_line_M"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/station_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/station_t"
            android:layout_toRightOf="@+id/station_t"
            android:textIsSelectable="false"
            android:text=" "
            android:background="@color/grey_5" 
            android:textSize="@+dimen/activity_train_line_M" />

        <TextView
            android:id="@+id/station_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/station_t"
            android:layout_toRightOf="@+id/station_separator"
            android:paddingLeft="@+dimen/activity_station_stops_line1_padding_color"
            android:textColor="@color/black"
            android:textIsSelectable="false" />
        
         <TextView
            android:id="@+id/station_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/station_t"
            android:layout_toLeftOf="@+id/arrow"
            android:textColor="@color/grey"
            android:layout_marginRight="10dp"
            android:textIsSelectable="false" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="derpderp"
            android:src="@drawable/left_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/favorites_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>