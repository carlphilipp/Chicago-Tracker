<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="225dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:paddingEnd="@dimen/activity_station_stops_0dp"
        android:paddingLeft="@dimen/activity_station_stops_line1_padding_color"
        android:paddingRight="@dimen/activity_station_stops_0dp"
        android:paddingStart="@dimen/activity_station_stops_line1_padding_color"
        android:scrollHorizontally="true"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ListView
        android:id="@+id/arrivals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/error"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="@string/map_train_follow_error"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:textStyle="normal"
        android:visibility="gone"
        android:textAlignment="center"/>

</RelativeLayout>
